<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Activity.MainActivity"
    android:weightSum="1"
    android:background="#333333">

    <TextView
        android:text="Conditionnement de comprimés"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitreReg"
        android:layout_marginBottom="7sp"
        android:layout_marginTop="2sp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <EditText
        android:hint="IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextAdresse"
        android:layout_marginBottom="5sp"
        android:textSize="13sp"
        android:background="#282828"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:hint="Rack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextRack"
        android:layout_marginBottom="5sp"
        android:textSize="13sp"
        android:background="#282828"
        android:textColor="#FFFFFF"/>
    <EditText
        android:hint="Slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextSlot"
        android:textSize="13sp"
        android:background="#282828"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/bt_main_Compri"
        android:onClick="onMainClic"
        android:text="Se connecter"
        android:layout_height="wrap_content"
        android:layout_width="350sp"
        android:layout_marginTop="5sp"
        android:background="#0060B1"
        android:textColor="#000000"
        />
    <TextView
        android:text="Etat : déconnecté"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewIP"
        android:layout_marginBottom="5sp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/projValeur"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#FFFFFFFF"
        android:background="#232323"
        android:text="Nombre de bouteilles non connecté"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <TextView
        android:id="@+id/ArrBout"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#FFFFFFFF"
        android:text="Arrivée des flacons non connecté"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="3sp"
        />

    <TextView
        android:id="@+id/SelecServ"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#FFFFFFFF"
        android:text="Selecteur en service non connecté"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="3sp"
        />


    <TextView
        android:id="@+id/BtnQ1"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#484848"
        android:text="Bouton I1 non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/BtnQ2"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#484848"
        android:text="Bouton I2 non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/BtnQ3"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#484848"
        android:text="Bouton I3 non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="5sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/valvePilu"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="#f7d76c"
        android:text="Distributeur de pilules non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/valveCont"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="#f7d76c"
        android:text="Moteur bande non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="5sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/valveDistant"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ff0000"
        android:background="#ffea00"
        android:text="Local/Distant non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        />

    <TextView
        android:text="IP déconnectée"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewA1"
        android:layout_marginTop="57sp"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <TextView
        android:text="IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewAdresse"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:text="Rack déconnecté"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewR1"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <TextView
        android:text="Rack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewRack"
        android:textSize="11sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:text="Slot déconnecté"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewS1"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <TextView
        android:text="Slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewSlot"
        android:layout_marginBottom="2sp"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        />

    <!-- <Button
        android:id="@+id/bt_main_SU"
        android:text="Modification super utilisateur"
        android:layout_height="18dp"
        android:layout_width="350sp"
        android:background="#FE9147"
        android:textColor="#ffffff"
        android:visibility="invisible"
        /> -->

</LinearLayout>
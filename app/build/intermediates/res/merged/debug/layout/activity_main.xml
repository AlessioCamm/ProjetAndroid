<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Activity.MainActivity"
    android:weightSum="1"
    android:background="#333333">

    <TextView
        android:text="Asservissement des niveaux de liquide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitreReg"
        android:layout_marginBottom="7sp"
        android:layout_marginTop="2sp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <EditText
        android:hint="IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextAdresse"
        android:layout_marginBottom="5sp"
        android:textSize="13sp"
        android:background="#282828"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:hint="Rack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextRack"
        android:layout_marginBottom="5sp"
        android:textSize="13sp"
        android:background="#282828"
        android:textColor="#FFFFFF"/>
    <EditText
        android:hint="Slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextSlot"
        android:textSize="13sp"
        android:background="#282828"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/bt_main_ConnexS7"
        android:onClick="onMainClickManager"
        android:text="Se connecter"
        android:layout_height="wrap_content"
        android:layout_width="350sp"
        android:layout_marginTop="5sp"
        android:background="#10A085"
        android:textColor="#ffffff"
        />
    <TextView
        android:text="Etat : déconnecté"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewIP"
        android:layout_marginBottom="5sp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/projValeur"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#FFFFFFFF"
        android:background="#232323"
        android:text="Niveau de l'eau non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginBottom="5sp"

        />
    <TextView
        android:id="@+id/valve1"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#FFFFFFFF"
        android:background="#484848"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Valve 1 non connectée"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/valve2"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#FFFFFFFF"
        android:background="#484848"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Valve 2 non connectée"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/valve3"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#FFFFFFFF"
        android:background="#484848"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Valve 3 non connectée"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/valve4"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#FFFFFFFF"
        android:background="#484848"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Valve 4 non connectée"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        />
    <TextView
        android:id="@+id/valveAuto"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#126dff"
        android:background="#FFFFFF"
        android:textAlignment="center"
        android:text="Manu/auto non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="5sp"
        />
    <TextView
        android:id="@+id/valveDistant"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ff0000"
        android:background="#ffea00"
        android:text="Locale/Distant non connecté"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginBottom="40sp"
        />

    <TextView
        android:text="IP déconnectée"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewA1"
        android:layout_marginTop="50sp"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <TextView
        android:text="IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewAdresse"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:text="Rack déconnecté"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewR1"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <TextView
        android:text="Rack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewRack"
        android:textSize="11sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:text="Slot déconnecté"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewS1"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <TextView
        android:text="Slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewSlot"
        android:layout_marginBottom="2sp"
        android:textSize="11sp"
        android:textColor="#FFFFFF"
        />

    <!-- <Button
    android:id="@+id/bt_main_SU"
    android:text="Modification super utilisateur"
    android:layout_height="18dp"
    android:layout_width="350sp"
    android:background="#FE9147"
    android:textColor="#ffffff"
    android:visibility="invisible"
    /> -->

</LinearLayout>

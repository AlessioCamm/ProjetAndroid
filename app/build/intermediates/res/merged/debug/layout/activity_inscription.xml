<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Activity.MainActivity"
    android:weightSum="1"
    android:background="#333333">

    <TextView
        android:text="Inscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitreIns"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="2sp"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:text="PrÃ©nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewPrenomIns"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextPrenomIns"
        android:layout_marginBottom="5sp"
        android:textSize="18sp"
        android:background="#282828"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:text="Nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewNomIns"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextNomIns"
        android:layout_marginBottom="5sp"
        android:textSize="18sp"
        android:background="#282828"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:text="Adresse mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewMailIns"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextMailIns"
        android:layout_marginBottom="5sp"
        android:textSize="18sp"
        android:background="#282828"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:text="Mot de passe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewPasswordIns"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextPasswordIns"
        android:layout_marginBottom="5sp"
        android:textSize="18sp"
        android:background="#282828"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/bt_inscription_ins"
        android:onClick="onClickInscription"
        android:text="Inscription"
        android:layout_height="wrap_content"
        android:layout_width="350sp"
        android:layout_marginTop="25sp"
        android:background="#10A085"
        android:textColor="#ffffff"
        />

    <Button
        android:id="@+id/bt_retourConnex"
        android:onClick="VueRetCo"
        android:text="Retour"
        android:layout_height="wrap_content"
        android:layout_width="102dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="120sp"
        android:textColor="#FFFFFF"
        android:background="#333333"
        />


</LinearLayout>